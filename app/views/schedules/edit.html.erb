<h3>予定を編集してください</h3>
<%= render "shared/error", obj: @schedule %> 
<%= form_with model: @schedule do |f| %>
  <table class="edit_table">
    <tr>
      <th><%= f.label :title ,"タイトル" %></th>
      <td><%= f.text_field :title %></td>
    </tr>

    <tr>
      <th><%= f.label :start_date ,"開始日" %></th>
      <td><%= f.date_field :start_date%></td>
    </tr>

    <tr>
      <th><%= f.label :end_date ,"終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>

    <tr>
      <td class="check"><%= f.check_box :all_day %></td>
      <th><%= f.label :all_day ,"終日の場合はチェックを入れます" %></th>
    </tr>    

    <tr>
      <th><%= f.label :schedule_memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :schedule_memo %></td>
    </tr>
  </table>
  <div>
    <ul>
      <li><%= f.submit "編集を完了する", class: "edit_submit_link"%></li>
    </ul>
    <ul>    
      <li><%= link_to "予定一覧に戻る", "/schedules", class: "link" %></li>
    </ul>
  </div>
<% end %>