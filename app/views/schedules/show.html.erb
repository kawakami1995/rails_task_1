<h3><%= @schedule.title %></h3>

<table class="show_table">
  <tr>
    <th>開始日</th>
    <td><%= @schedule.start_date %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @schedule.end_date %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
      <% if @schedule.all_day == "1" %>
        <%= @schedule.all_day = "◯"%> 
      <% end %>
    </td>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @schedule.schedule_memo %></td>
  </tr>  
</table>

<div>
  <ul>
    <li><%= link_to "編集", "/schedules/#{params[:id]}/edit", class: "link" %></li>
  </ul>
  <ul>
    <li><%= link_to "予定情報一覧に戻る", :schedules, class: "link" %></li>
  </ul>
</div>